<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.lanhi.vgo.driver.mvvm.model.UserData"/>
        <variable
            name="titleBarOptions"
            type="com.lanhi.vgo.driver.weight.titlebar.TitleBarOptions"/>
        <variable
            name="listener"
            type="com.lanhi.vgo.driver.common.OnEventListener"/>
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.lanhi.vgo.driver.weight.titlebar.Titlebar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/regist"
            app:showLeftBack="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/shap_corner_up">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_phone"
                android:scaleType="centerInside"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/hint_phone_num"
                android:textColorHint="@color/color_hint"
                android:layout_marginLeft="3dp"
                android:inputType="phone"
                android:text="@={data.phone}"
                android:textSize="16dp"
                android:textColor="@color/color_text"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:layout_marginTop="-1dp"
            android:padding="8dp"
            android:background="@drawable/shap_corner_center">
            <ImageView
                android:id="@+id/img_code"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_code"
                android:scaleType="centerInside"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_toRightOf="@+id/img_code"
                android:layout_toLeftOf="@+id/btn_get_code"
                android:hint="@string/verificationv_code"
                android:textColorHint="@color/color_hint"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:textSize="16dp"
                android:inputType="number"
                android:text="@={data.smsCode}"
                android:textColor="@color/color_text"/>
            <TextView
                android:id="@+id/btn_get_code"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:background="@drawable/shap_corner_button_h"
                android:text="@string/btn_get_verificationv_code"
                android:padding="8dp"
                android:onClick="@{listener::getVerCode}"
                android:layout_alignParentRight="true"
                android:textColor="#fe8264"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="-1dp"
            android:padding="8dp"
            android:background="@drawable/shap_corner_center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_password"
                android:scaleType="centerInside"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/hint_password"
                android:textColorHint="@color/color_hint"
                android:layout_marginLeft="3dp"
                android:inputType="textPassword"
                android:text="@={data.password}"
                android:textSize="16dp"
                android:textColor="@color/color_text"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="-1dp"
            android:padding="8dp"
            android:background="@drawable/shap_corner_down">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_password"
                android:scaleType="centerInside"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/hint_password2"
                android:textColorHint="@color/color_hint"
                android:layout_marginLeft="3dp"
                android:inputType="textPassword"
                android:text="@={data.password2}"
                android:textSize="16dp"
                android:textColor="@color/color_text"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:onClick="@{listener::vertifySMSCode}"
            android:layout_marginTop="40dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:src="@drawable/button"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/color_white"
                android:textSize="18dp"
                android:text="@string/btn_next"/>
        </RelativeLayout>
    </LinearLayout>
</layout>
