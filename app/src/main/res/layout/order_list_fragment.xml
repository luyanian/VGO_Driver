<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="listener"
            type="com.lanhi.vgo.driver.common.OnEventListener"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.lanhi.vgo.driver.weight.titlebar.Titlebar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/menu_order_text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_tab_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img_tab_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_tab_icon_1"/>
                <TextView
                    android:id="@+id/tv_tab_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:textColor="@drawable/selector_menu_text_color"
                    android:textSize="12dp"
                    android:text="@string/order_state_all"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_tab_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img_tab_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_tab_icon_2"/>
                <TextView
                    android:id="@+id/tv_tab_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@drawable/selector_menu_text_color"
                    android:textSize="12dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/order_state_unanswewd"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_tab_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img_tab_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_tab_icon_3"/>
                <TextView
                    android:id="@+id/tv_tab_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@drawable/selector_menu_text_color"
                    android:layout_marginTop="2dp"
                    android:textSize="12dp"
                    android:text="@string/order_state_unpickup"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_tab_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img_tab_4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_tab_icon_4"/>
                <TextView
                    android:id="@+id/tv_tab_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@drawable/selector_menu_text_color"
                    android:layout_marginTop="2dp"
                    android:textSize="12dp"
                    android:text="@string/order_state_on_the_way"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_tab_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img_tab_5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/selector_tab_icon_5"/>
                <TextView
                    android:id="@+id/tv_tab_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@drawable/selector_menu_text_color"
                    android:layout_marginTop="2dp"
                    android:textSize="12dp"
                    android:text="@string/order_state_complete"/>
            </LinearLayout>
        </LinearLayout>
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnablePreviewInEditMode="true">
            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:background="#ffffff" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>

</layout>